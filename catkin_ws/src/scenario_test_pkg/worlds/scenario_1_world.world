<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="scenario_1_depth_test_world">

    <include>
      <uri>model://sun</uri>
    </include>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- Модель виртуальной камеры с depth сенсором -->
    <model name="depth_camera_model">
        <pose>0 0 0.5 0 0 0</pose>
        <static>true</static>
        <link name="camera_link">
            <collision name="collision">
              <geometry><box><size>0.05 0.05 0.05</size></box></geometry>
            </collision>
            <visual name="visual">
               <geometry><box><size>0.05 0.05 0.05</size></box></geometry>
            </visual>
            <sensor name="depth_cam_sensor" type="depth">
                <camera name="depth_camera">
                    <horizontal_fov>1.047</horizontal_fov>
                    <image>
                      <width>640</width>
                      <height>480</height>
                      <format>R8G8B8</format>
                    </image>
                    <clip>
                      <near>0.1</near>
                      <far>10.0</far>
                    </clip>
                    <noise>
                      <type>gaussian</type>
                      <mean>0.0</mean>
                      <stddev>0.007</stddev>
                    </noise>
                </camera>
                <plugin name="depth_camera_plugin" filename="libgazebo_ros_depth_camera.so">
                  <ros>
                    <namespace>/test_camera</namespace>
                    <argument>image_raw:=image_raw</argument>
                    <argument>depth/image_raw:=depth/image_raw</argument>
                    <argument>points:=depth/points</argument>
                  </ros>
                  <frame_name>camera_depth_optical_frame</frame_name>
                  <optical_frame_id>camera_depth_optical_frame</optical_frame_id>
                  <update_rate>20</update_rate>
                </plugin>
            </sensor>
        </link>
    </model>

    <!-- Модели тестовых кубов на разных расстояниях -->
    <model name="test_cube_1m">
      <pose>1 0 0.25 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
        </visual>
      </link>
    </model>

    <model name="test_cube_3m">
      <pose>3 0 0.25 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
        </visual>
      </link>
    </model>

    <model name="test_cube_5m">
      <pose>5 0 0.25 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
        </visual>
      </link>
    </model>

  </world>
</sdf>

